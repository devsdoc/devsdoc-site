<style>
  /* Team Structure - Robust Workflow Design */
  .team-structure {
    padding: 80px 0;
    position: relative;
  }

  .workflow-container {
    max-width: 1200px;
    margin: 60px auto 0;
    position: relative;
  }

  /* Workflow Path - Organic flowing line */
  .workflow-path {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #43BAFF 0%, #7141B1 50%, #43BAFF 100%);
    transform: translateY(-50%);
    z-index: 1;
    border-radius: 2px;
    opacity: 0.3;
  }

  .workflow-path::before {
    content: '';
    position: absolute;
    top: -2px;
    left: 0;
    right: 0;
    height: 8px;
    background: linear-gradient(90deg, transparent 0%, rgba(67, 186, 255, 0.2) 50%, transparent 100%);
    border-radius: 4px;
    animation: flow 3s ease-in-out infinite;
  }

  @keyframes flow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.6; }
  }

  /* Role Cards - Organic shapes */
  .role-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    position: relative;
    z-index: 2;
    margin-top: 40px;
  }

  .role-card {
    background: #ffffff;
    border-radius: 20px;
    padding: 40px 30px;
    text-align: center;
    position: relative;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 2px solid transparent;
    overflow: hidden;
  }

  .role-card::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(67, 186, 255, 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .role-card:hover::before {
    opacity: 1;
  }

  .role-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 15px 40px rgba(67, 186, 255, 0.2);
    border-color: #43BAFF;
  }

  /* Role Icon - Organic shape */
  .role-icon {
    width: 90px;
    height: 90px;
    margin: 0 auto 25px;
    background: linear-gradient(135deg, #43BAFF 0%, #7141B1 100%);
    border-radius: 25% 75% 25% 75% / 75% 25% 75% 25%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
    color: #ffffff;
    position: relative;
    transition: all 0.4s ease;
  }

  .role-card:hover .role-icon {
    transform: rotate(5deg) scale(1.1);
    border-radius: 75% 25% 75% 25% / 25% 75% 25% 75%;
  }

  .role-icon i {
    position: relative;
    z-index: 2;
  }

  /* Role Title */
  .role-title {
    font-size: 24px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 12px;
    position: relative;
  }

  .role-title::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 3px;
    background: linear-gradient(90deg, #43BAFF, #7141B1);
    border-radius: 2px;
  }

  /* Role Responsibilities */
  .role-responsibilities {
    margin-top: 25px;
    text-align: left;
  }

  .role-responsibilities ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .role-responsibilities li {
    font-size: 14px;
    color: #666;
    line-height: 1.8;
    padding: 8px 0;
    padding-left: 25px;
    position: relative;
  }

  .role-responsibilities li::before {
    content: 'â†’';
    position: absolute;
    left: 0;
    color: #43BAFF;
    font-weight: 700;
    font-size: 16px;
  }

  /* Workflow Steps Indicator */
  .workflow-steps {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 50px 0 30px;
    position: relative;
    z-index: 2;
  }

  .workflow-step {
    flex: 1;
    text-align: center;
    position: relative;
  }

  .workflow-step::after {
    content: '';
    position: absolute;
    top: 20px;
    right: -50%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, #43BAFF, transparent);
    z-index: -1;
  }

  .workflow-step:last-child::after {
    display: none;
  }

  .step-number {
    width: 40px;
    height: 40px;
    margin: 0 auto 10px;
    background: linear-gradient(135deg, #43BAFF, #7141B1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-weight: 700;
    font-size: 18px;
    box-shadow: 0 4px 15px rgba(67, 186, 255, 0.3);
  }

  .step-label {
    font-size: 12px;
    color: #666;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Process Flow Visualization */
  .process-flow {
    margin-top: 60px;
    padding: 40px;
    background: linear-gradient(135deg, rgba(67, 186, 255, 0.05) 0%, rgba(113, 65, 177, 0.05) 100%);
    border-radius: 25px;
    border: 2px solid rgba(67, 186, 255, 0.1);
  }

  .process-title {
    text-align: center;
    font-size: 20px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 30px;
  }

  .process-stages {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 25px;
  }

  .process-stage {
    text-align: center;
    padding: 20px;
    background: #ffffff;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .process-stage:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(67, 186, 255, 0.15);
  }

  .stage-icon {
    font-size: 32px;
    color: #43BAFF;
    margin-bottom: 12px;
  }

  .stage-name {
    font-size: 16px;
    font-weight: 600;
    color: #1a1a1a;
    margin-bottom: 8px;
  }

  .stage-description {
    font-size: 13px;
    color: #666;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .role-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }

    .workflow-steps {
      flex-direction: column;
      gap: 30px;
    }

    .workflow-step::after {
      display: none;
    }

    .process-stages {
      grid-template-columns: 1fr;
    }

    .workflow-path {
      display: none;
    }
  }
</style>

