<div class="offcanvas offcanvas-start" id="offcanvasExample">
  <div class="offcanvas-header">
    <!-- Offcanvas Logo Start -->
    <div class="offcanvas-logo">
      <a href="/" aria-label="DevsDoc Home">
        <img src="/logo-dd-w.png" alt="DevsDoc Logo" id="mobile-navbar-logo">
      </a>
    </div>
    <!-- Offcanvas Logo End -->
    <button type="button" class="close-btn" data-bs-dismiss="offcanvas"><i class="flaticon-close"></i></button>
  </div>

  <!-- Offcanvas Body Start -->
  <div class="offcanvas-body">
    <div class="offcanvas-menu">
      <ul class="main-menu">
        <li class="active-menu">
          <a href="/">Home</a>
        </li>
        <li class="services-menu-item">
          <span class="menu-label">Services</span>
          <ul class="sub-menu">
            <li><a href="/data-engineering">Data Engineering and AI Strategy</a></li>
            <li><a href="/web-application">Web Application Development</a></li>
            <li><a href="/mobile-application">Mobile application Development</a></li>
            <li><a href="/cloud-devops">Cloud and DevOps</a></li>
          </ul>
        </li>
        <li>
          <a href="/about">About us</a>
        </li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
  </div>
  <!-- Offcanvas Body End -->
</div>
<!-- Offcanvas End -->

<script is:inline>
  // Header Sticky functionality
  window.addEventListener('scroll', function() {
    const header = document.getElementById('header');
    if (header) {
      if (window.pageYOffset > 50 || window.scrollY > 50) {
        header.classList.add('sticky');
      } else {
        header.classList.remove('sticky');
      }
    }
  });
  
  // Force light theme logos - always use logo-dd-w.png for navbar
  // Footer always uses dd-logo.png
  (function() {
    function forceLightLogos() {
      const navbarLogo = document.getElementById('navbar-logo');
      const mobileNavbarLogo = document.getElementById('mobile-navbar-logo');
      
      // Force light theme logo (logo-dd-w.png) for navbar since we're forcing light theme
      if (navbarLogo) {
        navbarLogo.src = '/logo-dd-w.png';
        navbarLogo.setAttribute('srcset', '');
      }
      if (mobileNavbarLogo) {
        mobileNavbarLogo.src = '/logo-dd-w.png';
        mobileNavbarLogo.setAttribute('srcset', '');
      }
      
      // Override any dark mode logo selection (but exclude footer which always uses dd-logo.png)
      const allLogos = document.querySelectorAll('img[src*="dd-logo"], img[src*="logo-dd"]');
      allLogos.forEach(function(logo) {
        // Skip footer logo - it should always use dd-logo.png
        if (logo.id === 'footer-logo' || logo.closest('.footer-section')) {
          return;
        }
        
        // Always force light logo for navbar elements
        if (logo.closest('.offcanvas') || logo.closest('#header') || logo.id === 'navbar-logo' || logo.id === 'mobile-navbar-logo') {
          if (logo.src.includes('dd-logo.png') && !logo.src.includes('logo-dd-w.png')) {
            logo.src = '/logo-dd-w.png';
          }
        }
      });
    }
    
    // Run immediately if DOM is ready, otherwise wait
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', forceLightLogos);
    } else {
      forceLightLogos();
    }
    
    // Also run after a short delay to catch dynamically loaded content
    setTimeout(forceLightLogos, 100);
    setTimeout(forceLightLogos, 500);
  })();
  
  // Mobile menu - services menu always open (no toggle functionality)
  document.addEventListener('DOMContentLoaded', function() {
    const servicesMenuItem = document.querySelector('.offcanvas-menu .main-menu > li.services-menu-item');
    
    if (servicesMenuItem) {
      // Remove any closed state class to ensure it's always open
      servicesMenuItem.classList.remove('submenu-closed');
      
      // Remove click handler - no toggle functionality
      const menuLabel = servicesMenuItem.querySelector('span.menu-label');
      if (menuLabel) {
        // Make it non-clickable (no toggle)
        menuLabel.style.pointerEvents = 'none';
      }
    }
  });
</script>
