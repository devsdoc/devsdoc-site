<style>
  .faq-section {
    padding: 100px 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
  }

  .faq-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .faq-item {
    background: #ffffff;
    border-radius: 15px;
    margin-bottom: 20px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    border: 1px solid #e9ecef;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .faq-item:hover {
    box-shadow: 0 8px 25px rgba(67, 186, 255, 0.1);
    border-color: #43BAFF;
  }

  .faq-item.active {
    border-color: #43BAFF;
    box-shadow: 0 8px 25px rgba(67, 186, 255, 0.15);
  }

  .faq-question {
    padding: 25px 30px;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
    user-select: none;
  }

  .faq-question:hover {
    background: rgba(67, 186, 255, 0.02);
  }

  .faq-question h3 {
    font-size: 18px;
    font-weight: 600;
    color: #1a1a1a;
    margin: 0;
    flex: 1;
    padding-right: 20px;
    line-height: 1.5;
  }

  .faq-icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: linear-gradient(135deg, #43BAFF 0%, #7141B1 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    font-size: 14px;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .faq-item.active .faq-icon {
    transform: rotate(180deg);
    background: linear-gradient(135deg, #7141B1 0%, #43BAFF 100%);
  }

  .faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease, padding 0.4s ease;
    padding: 0 30px;
  }

  .faq-item.active .faq-answer {
    max-height: 500px;
    padding: 0 30px 25px 30px;
  }

  .faq-answer p {
    font-size: 16px;
    line-height: 1.8;
    color: #666;
    margin: 0;
    padding-top: 15px;
  }

  .faq-answer ul {
    margin: 15px 0 0 0;
    padding-left: 25px;
    color: #666;
    font-size: 16px;
    line-height: 1.8;
  }

  .faq-answer ul li {
    margin-bottom: 8px;
  }

  .faq-answer ul li:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 767px) {
    .faq-section {
      padding: 60px 0;
    }

    .faq-question {
      padding: 20px;
    }

    .faq-question h3 {
      font-size: 16px;
      padding-right: 15px;
    }

    .faq-item.active .faq-answer {
      padding: 0 20px 20px 20px;
    }

    .faq-answer {
      padding: 0 20px;
    }
  }
</style>

