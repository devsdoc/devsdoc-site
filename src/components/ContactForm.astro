<!-- Contact Start -->
<section class="section techwix-contact-section techwix-contact-section-02 techwix-contact-section-03 section-padding-02" aria-label="Contact Form">
  <div class="container">
    <!-- Contact Wrap Start -->
    <div class="contact-wrap">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <!-- Contact Form Start -->
          <div class="contact-form">
            <div class="contact-form-wrap">
              <header class="heading-wrap text-center">
                <p class="sub-title">Get in Touch</p>
                <h2 class="title">Let's Build Something Amazing Together!</h2>
                <p style="margin-top: 15px; color: #666;">Whether you need web development, mobile apps, data engineering, or cloud solutions - we're here to help transform your ideas into reality.</p>
              </header>
              <!-- Success Message -->
              <div id="form-success" class="alert alert-success" role="alert" style="display: none; margin-bottom: 30px; padding: 15px 20px; background-color: #d4edda; border: 1px solid #c3e6cb; border-radius: 6px; color: #155724;">
                <strong>Success!</strong> <span id="success-message">Thank you for your message! We will respond within 24 hours.</span>
              </div>
              
              <!-- Error Message -->
              <div id="form-error" class="alert alert-danger" role="alert" style="display: none; margin-bottom: 30px; padding: 15px 20px; background-color: #f8d7da; border: 1px solid #f5c6cb; border-radius: 6px; color: #721c24;">
                <strong>Error!</strong> <span id="error-message">Something went wrong. Please try again.</span>
              </div>

              <form action="/api/contact" method="POST" id="contact-form" aria-label="Contact Form">
                <div class="row">
                  <div class="col-sm-6">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <label for="contact-name" class="visually-hidden">Your Name</label>
                      <input type="text" id="contact-name" name="name" placeholder="Your Name *" required aria-required="true">
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-6">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <label for="contact-email" class="visually-hidden">Your Email</label>
                      <input type="email" id="contact-email" name="email" placeholder="Your Email *" required aria-required="true">
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-6">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <label for="contact-company" class="visually-hidden">Company Name</label>
                      <input type="text" id="contact-company" name="company" placeholder="Company Name">
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-6">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <label for="contact-service" class="visually-hidden">Select Service</label>
                      <select id="contact-service" name="service" class="form-control" style="height: 60px; border: 1px solid #e3e3e3; padding: 0 20px;" aria-required="true">
                        <option value="">Select Service *</option>
                        <option value="web-development">Web Development</option>
                        <option value="mobile-development">Mobile App Development</option>
                        <option value="data-ai">Data Engineering & AI</option>
                        <option value="cloud-devops">Cloud & DevOps</option>
                        <option value="consulting">Technology Consulting</option>
                        <option value="other">Other</option>
                      </select>
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-12">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <label for="contact-subject" class="visually-hidden">Subject</label>
                      <input type="text" id="contact-subject" name="subject" placeholder="Subject *" required aria-required="true">
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-12">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <label for="contact-message" class="visually-hidden">Message</label>
                      <textarea id="contact-message" name="message" placeholder="Tell us about your project..." rows="5" required aria-required="true"></textarea>
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-12">
                    <!-- Single Form Start -->
                    <div class="form-btn">
                      <button class="btn" type="submit" id="submit-btn">
                        <span id="submit-text">Send Message</span>
                        <span id="submit-spinner" style="display: none; margin-left: 10px;">
                          <span style="display: inline-block; width: 16px; height: 16px; border: 2px solid #ffffff; border-top-color: transparent; border-radius: 50%; animation: spin 0.6s linear infinite;"></span>
                        </span>
                      </button>
                    </div>
                    <!-- Single Form End -->
                  </div>
                </div>
              </form>
            </div>
          </div>
          <!-- Contact Form End -->
        </div>
      </div>
    </div>
    <!-- Contact Wrap End -->
  </div>
</section>
<!-- Contact End -->

<style>
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }
  
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
  
  #submit-btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const submitText = document.getElementById('submit-text') as HTMLSpanElement;
    const submitSpinner = document.getElementById('submit-spinner') as HTMLSpanElement;
    const successMessage = document.getElementById('form-success') as HTMLDivElement;
    const errorMessage = document.getElementById('form-error') as HTMLDivElement;
    const successText = document.getElementById('success-message') as HTMLSpanElement;
    const errorText = document.getElementById('error-message') as HTMLSpanElement;

    if (!form) return;

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      // Hide previous messages
      successMessage.style.display = 'none';
      errorMessage.style.display = 'none';
      
      // Disable submit button and show spinner
      submitBtn.disabled = true;
      submitText.style.display = 'none';
      submitSpinner.style.display = 'inline-block';
      
      try {
        const formData = new FormData(form);
        
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData
        });
        
        const data = await response.json();
        
        if (response.ok && data.success) {
          // Show success message
          successText.textContent = data.message || 'Thank you for your message! We will respond within 24 hours.';
          successMessage.style.display = 'block';
          
          // Reset form
          form.reset();
          
          // Scroll to success message
          successMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        } else {
          // Show error message
          errorText.textContent = data.error || 'Something went wrong. Please try again.';
          errorMessage.style.display = 'block';
          
          // Scroll to error message
          errorMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
      } catch (error) {
        // Show error message
        errorText.textContent = 'Network error. Please check your connection and try again.';
        errorMessage.style.display = 'block';
        errorMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      } finally {
        // Re-enable submit button and hide spinner
        submitBtn.disabled = false;
        submitText.style.display = 'inline';
        submitSpinner.style.display = 'none';
      }
    });
  });
</script>
