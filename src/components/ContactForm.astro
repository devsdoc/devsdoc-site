<!-- Contact Start -->
<div class="section techwix-contact-section techwix-contact-section-02 techwix-contact-section-03 section-padding-02">
  <div class="container">
    <!-- Contact Wrap Start -->
    <div class="contact-wrap">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <!-- Contact Form Start -->
          <div class="contact-form">
            <div class="contact-form-wrap">
              <div class="heading-wrap text-center">
                <span class="sub-title">Get in Touch</span>
                <h3 class="title">Let's Build Something Amazing Together!</h3>
                <p style="margin-top: 15px; color: #666;">Whether you need web development, mobile apps, data engineering, or cloud solutions - we're here to help transform your ideas into reality.</p>
              </div>
              <form action="#" method="POST" id="contact-form">
                <div class="row">
                  <div class="col-sm-6">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <input type="text" name="name" placeholder="Your Name *" required>
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-6">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <input type="email" name="email" placeholder="Your Email *" required>
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-6">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <input type="text" name="company" placeholder="Company Name">
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-6">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <select name="service" class="form-control" style="height: 60px; border: 1px solid #e3e3e3; padding: 0 20px;">
                        <option value="">Select Service *</option>
                        <option value="web-development">Web Development</option>
                        <option value="mobile-development">Mobile App Development</option>
                        <option value="data-ai">Data Engineering & AI</option>
                        <option value="cloud-devops">Cloud & DevOps</option>
                        <option value="consulting">Technology Consulting</option>
                        <option value="other">Other</option>
                      </select>
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-12">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <input type="text" name="subject" placeholder="Subject *" required>
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-12">
                    <!-- Single Form Start -->
                    <div class="single-form">
                      <textarea name="message" placeholder="Tell us about your project..." rows="5" required></textarea>
                    </div>
                    <!-- Single Form End -->
                  </div>
                  <div class="col-sm-12">
                    <!-- Single Form Start -->
                    <div class="form-btn">
                      <button class="btn" type="submit">Send Message</button>
                    </div>
                    <!-- Single Form End -->
                  </div>
                </div>
              </form>
            </div>
          </div>
          <!-- Contact Form End -->
        </div>
      </div>
    </div>
    <!-- Contact Wrap End -->
  </div>
</div>
<!-- Contact End -->
