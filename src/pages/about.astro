---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import PageBanner from '../components/PageBanner.astro';
import AboutAbout from '../components/AboutAbout.astro';
import Team from '../components/Team.astro';
import Testimonial from '../components/Testimonial.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout 
  title="About DevsDoc - Expert Software Development Team | Web, Mobile & AI Solutions"
  description="Learn about DevsDoc's expert team specializing in web development, mobile apps, data engineering, and AI. 150+ projects delivered with 98% client satisfaction. Your trusted technology partner."
  keywords="about devsdoc, software development company, expert developers, web development team, mobile app developers, AI engineers, cloud architects, agile development"
  canonical="https://devsdoc.com/about"
>
  <Navbar />
  <PageBanner />

  <!-- About Section -->
  <AboutAbout />

  <!-- Counter Start -->
  <section class="section techwix-counter-section-03 techwix-counter-section-04" aria-label="Our Statistics">
    <div class="container">
      <div class="counter-wrap" style="background-image: url(/assets/images/bg/counter-bg2.jpg);">
        <div class="row">
          <div class="col-lg-3 col-sm-6">
            <!-- Single Counter Start -->
            <article class="single-counter-02 text-center">
              <span aria-label="150 plus">150+</span>
              <p>Projects Delivered</p>
            </article>
            <!-- Single Counter End -->
          </div>
          <div class="col-lg-3 col-sm-6">
            <!-- Single Counter Start -->
            <article class="single-counter-02 text-center">
              <span aria-label="50 plus">50+</span>
              <p>AI & Data Solutions</p>
            </article>
            <!-- Single Counter End -->
          </div>
          <div class="col-lg-3 col-sm-6">
            <!-- Single Counter Start -->
            <article class="single-counter-02 text-center">
              <span aria-label="98 percent">98%</span>
              <p>Client Satisfaction</p>
            </article>
            <!-- Single Counter End -->
          </div>
          <div class="col-lg-3 col-sm-6">
            <!-- Single Counter Start -->
            <article class="single-counter-02 text-center">
              <span aria-label="24/7">24/7</span>
              <p>Support Available</p>
            </article>
            <!-- Single Counter End -->
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Counter End -->

  <!-- Choose Us Start -->
  <section class="section techwix-choose-us-section section-padding" style="background-image: url(/assets/images/bg/choose-us-bg3.jpg);" aria-label="Why Choose Us">
    <div class="container">
      <!-- Choose Us Wrap Start -->
      <div class="choose-us-wrap">
        <header class="section-title text-center">
          <p class="sub-title">REASON TO CHOOSE US</p>
          <h2 class="title">Comprehensive Technology Solutions for Modern Businesses</h2>
        </header>
        <div class="choose-us-content-wrap">
          <div class="row">
            <div class="col-xl-3 col-lg-4 col-md-6">
              <!-- Choose Us Item Start -->
              <article class="choose-us-item-02">
                <div class="choose-us-img">
                  <img src="/assets/images/ser-icon9.png" alt="Modern Web Development Icon">
                </div>
                <div class="choose-us-content">
                  <h3 class="title">Modern Web <br> Development</h3>
                  <p>Build scalable, responsive web applications using cutting-edge frameworks and best practices for optimal performance.</p>
                </div>
              </article>
              <!-- Choose Us Item End -->
            </div>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <!-- Choose Us Item Start -->
              <article class="choose-us-item-02">
                <div class="choose-us-img">
                  <img src="/assets/images/counter-3.png" alt="Expert Development Team Icon">
                </div>
                <div class="choose-us-content">
                  <h3 class="title">Expert Development Team</h3>
                  <p>Work with seasoned professionals who bring years of experience in web, mobile, AI, and cloud technologies.</p>
                </div>
              </article>
              <!-- Choose Us Item End -->
            </div>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <!-- Choose Us Item Start -->
              <article class="choose-us-item-02">
                <div class="choose-us-img">
                  <img src="/assets/images/ser-icon9.png" alt="Mobile App Development Icon">
                </div>
                <div class="choose-us-content">
                  <h3 class="title">Mobile App <br> Development</h3>
                  <p>Create engaging native and cross-platform mobile applications for iOS and Android that users love.</p>
                </div>
              </article>
              <!-- Choose Us Item End -->
            </div>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <!-- Choose Us Item Start -->
              <article class="choose-us-item-02">
                <div class="choose-us-img">
                  <img src="/assets/images/ser-icon12.png" alt="Data Engineering and AI Icon">
                </div>
                <div class="choose-us-content">
                  <h3 class="title">Data Engineering <br> & AI</h3>
                  <p>Transform data into insights with robust pipelines, machine learning models, and strategic AI implementations.</p>
                </div>
              </article>
              <!-- Choose Us Item End -->
            </div>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <!-- Choose Us Item Start -->
              <article class="choose-us-item-02">
                <div class="choose-us-img">
                  <img src="/assets/images/counter-1.png" alt="Cloud and DevOps Solutions Icon">
                </div>
                <div class="choose-us-content">
                  <h3 class="title">Cloud & DevOps <br> Solutions</h3>
                  <p>Optimize infrastructure with cloud migration, CI/CD automation, and scalable DevOps practices.</p>
                </div>
              </article>
              <!-- Choose Us Item End -->
            </div>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <!-- Choose Us Item Start -->
              <article class="choose-us-item-02">
                <div class="choose-us-img">
                  <img src="/assets/images/counter-2.png" alt="Agile Development Methodology Icon">
                </div>
                <div class="choose-us-content">
                  <h3 class="title">Agile Development Methodology</h3>
                  <p>Fast, iterative development cycles ensure rapid delivery and flexibility to adapt to changing requirements.</p>
                </div>
              </article>
              <!-- Choose Us Item End -->
            </div>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <!-- Choose Us Item Start -->
              <article class="choose-us-item-02">
                <div class="choose-us-img">
                  <img src="/assets/images/ser-icon11.png" alt="Full-Stack Expertise Icon">
                </div>
                <div class="choose-us-content">
                  <h3 class="title">Full-Stack <br> Expertise</h3>
                  <p>From frontend to backend, databases to deployment, we handle every aspect of your technology stack.</p>
                </div>
              </article>
              <!-- Choose Us Item End -->
            </div>
            <div class="col-xl-3 col-lg-4 col-md-6">
              <!-- Choose Us Item Start -->
              <article class="choose-us-item-02">
                <div class="choose-us-img">
                  <img src="/assets/images/ser-icon10.png" alt="Security and Scalability Icon">
                </div>
                <div class="choose-us-content">
                  <h3 class="title">Security & Scalability First</h3>
                  <p>Build secure, scalable solutions following industry best practices and compliance standards.</p>
                </div>
              </article>
              <!-- Choose Us Item End -->
            </div>
          </div>
        </div>
      </div>
      <!-- Choose Us Wrap End -->
    </div>
  </section>
  <!-- Choose Us End -->

  <!-- Skill Start -->
  <section class="section techwix-skill-section-02 techwix-skill-section-03 section-padding" aria-label="Our Expertise">
    <div class="container">
      <div class="skill-wrap">
        <div class="row">
          <div class="col-lg-6">
            <!-- Skill Left Start -->
            <div class="skill-left">
              <header class="section-title">
                <h2 class="title">Delivering Excellence Across the Full Technology Spectrum</h2>
              </header>
              <div class="about-list">
                <ul>
                  <li>
                    <span class="about-icon"><i class="fas fa-check"></i></span>
                    <span class="about-text">End-to-end solutions from concept to deployment and beyond</span>
                  </li>
                  <li>
                    <span class="about-icon"><i class="fas fa-check"></i></span>
                    <span class="about-text">Cutting-edge technologies: React, Node.js, Python, AWS, Azure</span>
                  </li>
                  <li>
                    <span class="about-icon"><i class="fas fa-check"></i></span>
                    <span class="about-text">Strategic technology partnerships that drive measurable results</span>
                  </li>
                </ul>
              </div>
              <!-- About Author Info Wrap Start -->
              <div class="about-author-info-wrap">
                <div class="about-author">
                  <img src="/assets/images/sign.png" alt="">
                  <h3 class="name">DevsDoc Team</h3>
                  <span class="designation">Technology Experts</span>
                </div>
                <div class="about-info">
                  <p>Ready to discuss your project?</p>
                  <h3 class="number">Contact Us</h3>
                </div>
              </div>
              <!-- About Author Info Wrap End -->
            </div>
            <!-- Skill Left End -->
          </div>
          <div class="col-lg-6">
            <!-- Skill Right Start -->
            <div class="skill-right">
              <p class="text">From modern web applications and mobile apps to sophisticated data pipelines and AI implementations, we deliver comprehensive solutions tailored to your business objectives. Our expertise spans the entire technology lifecycle: design, development, deployment, and ongoing optimization. We leverage industry-leading frameworks and cloud platforms to ensure your solutions are scalable, secure, and future-proof.</p>
              <div class="counter-bar">
                <!-- Skill Item Start -->
                <div class="skill-item">
                  <span class="title">Web & Mobile Development</span>
                  <div class="skill-bar">
                    <div class="bar-inner">
                      <div class="bar progress-line color-1" data-width="95">
                        <span class="skill-percent"><span class="counter">95</span>%</span>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Skill Item End -->
                <!-- Skill Item Start -->
                <div class="skill-item">
                  <span class="title">Data Engineering & AI</span>
                  <div class="skill-bar">
                    <div class="bar-inner">
                      <div class="bar progress-line color-1" data-width="90">
                        <span class="skill-percent"><span class="counter">90</span>%</span>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Skill Item End -->
                <!-- Skill Item Start -->
                <div class="skill-item">
                  <span class="title">Cloud & DevOps</span>
                  <div class="skill-bar">
                    <div class="bar-inner">
                      <div class="bar progress-line color-1" data-width="92">
                        <span class="skill-percent"><span class="counter">92</span>%</span>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Skill Item End -->
              </div>
            </div>
            <!-- Skill Right End -->
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Skill End -->

  <!-- Team Section -->
  <Team />

  <!-- Testimonial Section -->
  <Testimonial />

  <!-- CTA Section -->
  <CTA />

  <Footer />
</BaseLayout>