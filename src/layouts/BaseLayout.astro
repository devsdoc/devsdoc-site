---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'DevsDoc - Technology IT Solutions', description = 'Technology IT Solutions Consultancy' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="main-wrapper">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  html {
    font-family: system-ui, sans-serif;
  }
  
  body {
    margin: 0;
    padding: 0;
  }

  .main-wrapper {
    width: 100%;
    min-height: 100vh;
  }
</style>
