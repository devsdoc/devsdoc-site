---
import '../styles/global.css';
import WhatsAppWidget from '../components/WhatsAppWidget.astro';

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  canonical?: string;
  noindex?: boolean;
}

const { 
  title = 'DevsDoc - Web, Mobile, AI & Cloud Development Services', 
  description = 'Professional software development company specializing in web applications, mobile apps, data engineering, AI solutions, and cloud infrastructure. Transform your ideas into scalable technology.', 
  keywords = 'web development, mobile app development, data engineering, AI solutions, cloud computing, DevOps, software development, custom software, React, Node.js, Python, AWS',
  ogImage = '/assets/images/og-image.jpg',
  canonical,
  noindex = false
} = Astro.props;

const currentUrl = canonical || Astro.url.href;
const siteName = 'DevsDoc';
---

<!doctype html>
<html class="no-js" lang="en" style="color-scheme: light;">
  <head>
    <!-- Essential Meta Tags -->
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    
    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="DevsDoc" />
    <meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1'} />
    <link rel="canonical" href={currentUrl} />
    
    <!-- Open Graph Meta Tags (Facebook, LinkedIn) -->
    <meta property="og:locale" content="en_US" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Favicon and Icons -->
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.svg" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    
    <!-- Theme and Color - Force Light Mode -->
    <meta name="color-scheme" content="light only" />
    <meta name="theme-color" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#ffffff" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#ffffff" />
    <!-- iOS Safari -->
    <meta name="apple-mobile-web-app-status-bar-style" content="default" />
    <!-- Android Chrome -->
    <meta name="mobile-web-app-capable" content="yes" />
    
    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
    
    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "DevsDoc",
        "url": "https://devsdoc.com",
        "logo": "https://devsdoc.com/logo-dd-w.png",
        "description": "Professional software development company specializing in web applications, mobile apps, data engineering, AI solutions, and cloud infrastructure.",
        "address": {
          "@type": "PostalAddress",
          "addressCountry": "US"
        },
        "sameAs": [
          "https://www.linkedin.com/company/devsdoc",
          "https://twitter.com/devsdoc"
        ],
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": "+1-234-567-890",
          "contactType": "Customer Service",
          "email": "contact@devsdoc.com",
          "availableLanguage": ["English"]
        },
        "offers": {
          "@type": "AggregateOffer",
          "offerCount": "4",
          "offers": [
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Web Development",
                "description": "Custom web application development using modern technologies"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Mobile App Development",
                "description": "Native and cross-platform mobile application development"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Data Engineering & AI",
                "description": "Data pipeline development and AI strategy implementation"
              }
            },
            {
              "@type": "Offer",
              "itemOffered": {
                "@type": "Service",
                "name": "Cloud & DevOps",
                "description": "Cloud infrastructure and DevOps implementation"
              }
            }
          ]
        }
      }
    </script>

    <!-- Icon Font CSS -->
    <link rel="stylesheet" href="/assets/css/plugins/all.min.css" />
    <link rel="stylesheet" href="/assets/css/plugins/flaticon.css" />

    <!-- Plugins CSS -->
    <link rel="stylesheet" href="/assets/css/plugins/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/css/plugins/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/assets/css/plugins/aos.css" />
    <link rel="stylesheet" href="/assets/css/plugins/magnific-popup.css" />

    <!-- Main Style CSS -->
    <link rel="stylesheet" href="/assets/css/style.css" />
    
    <!-- Force Light Mode CSS - Comprehensive Override -->
    <style>
      /* Force light mode for the entire site - STRONG OVERRIDES */
      :root {
        color-scheme: light only !important;
        --bs-body-bg: #ffffff !important;
        --bs-body-color: #000000 !important;
      }
      
      html {
        color-scheme: light only !important;
        background-color: #ffffff !important;
      }
      
      body {
        color-scheme: light only !important;
        background-color: #ffffff !important;
        color: #000000 !important;
      }
      
      /* Override any dark mode media queries - STRONG - Works on all devices */
      @media (prefers-color-scheme: dark) {
        html,
        body,
        body *,
        .main-wrapper,
        .main-wrapper *,
        #header,
        #header *,
        header,
        header *,
        nav,
        nav *,
        main,
        main *,
        footer,
        footer *,
        section,
        section *,
        div,
        div *,
        article,
        article *,
        aside,
        aside * {
          color-scheme: light only !important;
          background-color: #ffffff !important;
          color: #000000 !important;
        }
        
        /* Force light backgrounds on all elements */
        div, section, header, nav, main, footer, article, aside, p, h1, h2, h3, h4, h5, h6, span, a, li, ul, ol {
          background-color: #ffffff !important;
          color: #000000 !important;
        }
        
        /* Override any dark mode specific classes */
        .bg-dark,
        .bg-dark *,
        [class*="dark"],
        [class*="dark"] * {
          background-color: #ffffff !important;
          color: #000000 !important;
        }
      }
      
      /* Ensure all elements respect light mode */
      *,
      *::before,
      *::after {
        color-scheme: light only !important;
      }
      
      /* Override Bootstrap dark mode classes if any */
      .bg-dark,
      .bg-dark *,
      .dark,
      .dark * {
        background-color: #ffffff !important;
        color: #000000 !important;
      }
      
      /* Force light theme on offcanvas/sidebar */
      .offcanvas,
      .offcanvas-header,
      .offcanvas-body,
      .offcanvas * {
        background-color: #ffffff !important;
        color: #000000 !important;
      }
      
      /* Mobile browser specific overrides */
      @media screen and (max-width: 768px) {
        html,
        body,
        body * {
          color-scheme: light only !important;
          background-color: #ffffff !important;
          color: #000000 !important;
        }
      }
    </style>
    
    <!-- Early Script to Override matchMedia - Runs Before Page Load -->
    <script is:inline>
      // Override matchMedia for prefers-color-scheme BEFORE any scripts run
      (function() {
        const originalMatchMedia = window.matchMedia;
        window.matchMedia = function(query) {
          if (query.includes('prefers-color-scheme: dark')) {
            // Return a MediaQueryList that always reports light mode
            const mql = originalMatchMedia.call(this, query);
            const originalMatches = mql.matches;
            Object.defineProperty(mql, 'matches', {
              get: function() { return false; },
              configurable: true
            });
            // Override addListener/removeListener to prevent dark mode detection
            if (mql.addEventListener) {
              const originalAddListener = mql.addEventListener.bind(mql);
              mql.addEventListener = function(type, listener) {
                if (type === 'change') {
                  // Don't call listener since we're forcing light mode
                  return;
                }
                return originalAddListener(type, listener);
              };
            }
            return mql;
          }
          return originalMatchMedia.call(this, query);
        };
      })();
    </script>
    
    <!-- Logo Theme Script - Force Light Theme -->
    <script is:inline>
      // Ensure correct logo based on theme
      // Since we're forcing light theme, always use logo-dd-w.png for navbar
      // Footer always uses dd-logo.png
      (function() {
        function forceLightThemeLogos() {
          // Force light theme logo for navbar (but not footer)
          const logos = document.querySelectorAll('img[src*="dd-logo"], img[src*="logo-dd"]');
          logos.forEach(function(logo) {
            // Skip footer logo - it should always use dd-logo.png
            if (logo.id === 'footer-logo' || logo.closest('.footer-section')) {
              return;
            }
            
            // Always use light theme logo (logo-dd-w.png) for navbar since we're forcing light theme
            if (logo.src.includes('dd-logo.png') && !logo.src.includes('logo-dd-w.png')) {
              logo.src = logo.src.replace('dd-logo.png', 'logo-dd-w.png');
            }
            // Ensure logo-dd-w.png is used for navbar logos
            if (!logo.src.includes('logo-dd-w.png') && (logo.id === 'navbar-logo' || logo.id === 'mobile-navbar-logo')) {
              logo.src = '/logo-dd-w.png';
            }
          });
          
          // Override picture source elements to always use light logo (but not footer)
          const pictureElements = document.querySelectorAll('picture source[srcset*="dd-logo"]');
          pictureElements.forEach(function(source) {
            // Skip footer picture elements
            if (source.closest('.footer-section')) {
              return;
            }
            // Remove dark mode source or change it to light logo
            if (source.getAttribute('media') && source.getAttribute('media').includes('prefers-color-scheme: dark')) {
              source.remove();
            } else {
              source.setAttribute('srcset', '/logo-dd-w.png');
            }
          });
        }
        
        // Run immediately if DOM is ready, otherwise wait
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', forceLightThemeLogos);
        } else {
          forceLightThemeLogos();
        }
        
        // Also run after a short delay to catch dynamically loaded content
        setTimeout(forceLightThemeLogos, 100);
        setTimeout(forceLightThemeLogos, 500);
      })();
    </script>
  </head>
  <body>
    <div class="main-wrapper">
      <!-- Preloader start -->
      <div id="preloader">
        <div class="preloader">
          <span></span>
          <span></span>
        </div>
      </div>
      <!-- Preloader End -->

      <slot />

      <!-- back to top start -->
      <div class="progress-wrap">
        <svg class="progress-circle svg-content" width="100%" height="100%" viewBox="-1 -1 102 102">
          <path d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98" />
        </svg>
      </div>
      <!-- back to top end -->

      <!-- WhatsApp Widget -->
      <WhatsAppWidget />
    </div>

    <!-- Vendor JS -->
    <script is:inline src="/assets/js/vendor/jquery-1.12.4.min.js"></script>
    <script is:inline src="/assets/js/vendor/modernizr-3.11.2.min.js"></script>

    <!-- Bootstrap JS -->
    <script is:inline src="/assets/js/plugins/popper.min.js"></script>
    <script is:inline src="/assets/js/plugins/bootstrap.min.js"></script>

    <!-- Plugins JS -->
    <script is:inline src="/assets/js/plugins/swiper-bundle.min.js"></script>
    <script is:inline src="/assets/js/plugins/aos.js"></script>
    <script is:inline src="/assets/js/plugins/waypoints.min.js"></script>
    <script is:inline src="/assets/js/plugins/back-to-top.js"></script>
    <script is:inline src="/assets/js/plugins/jquery.counterup.min.js"></script>
    <script is:inline src="/assets/js/plugins/appear.min.js"></script>
    <script is:inline src="/assets/js/plugins/jquery.magnific-popup.min.js"></script>

    <!-- Main JS -->
    <script is:inline src="/assets/js/main.js"></script>
    
    <!-- Hide preloader when page loads -->
    <script is:inline>
      window.addEventListener('load', function() {
        const preloader = document.getElementById('preloader');
        if (preloader) {
          preloader.style.display = 'none';
        }
      });
      
      // Fallback: hide preloader after a short delay if load event doesn't fire
      setTimeout(function() {
        const preloader = document.getElementById('preloader');
        if (preloader) {
          preloader.style.display = 'none';
        }
      }, 1000);
    </script>
  </body>
</html>
